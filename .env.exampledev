# Local development environment overrides
# Copy to .env and adjust if needed for your workstation

# Core identity
TENANT_ID=local
CLUSTER_NAME=moni
ENVIRONMENT=dev

# Local object storage (MinIO via docker-compose.local.yml)
AWS_REGION=us-east-1
S3_BUCKET=mimir
AWS_ACCESS_KEY_ID=minio
AWS_SECRET_ACCESS_KEY=minio123

# Optional: remote_write token for Prometheus Agent (unused by default)
MIMIR_REMOTE_WRITE_TOKEN=local-dev-token

# Grafana + Runbook endpoints (kind NodePort mappings)
GF_ROOT_URL=http://localhost:3000
RUNBOOK_BASE_URL=http://localhost:3000/runbooks

# Base domain not used in local overlays, kept for script compatibility
BASE_DOMAIN=localhost.localdomain

# Disable OIDC locally (placeholders only)
OIDC_CLIENT_ID=local-grafana
OIDC_CLIENT_SECRET=local-secret
OIDC_ISSUER=http://dummy-issuer.local

# Alerting placeholders (Alertmanager local route is dev-null)
ONCALL_EMAIL=devnull@example.com
PD_KEY=fake-routing-key
WEBHOOK_URL=http://localhost:18080/webhook

# Kind/Helm helper
CLUSTER_NAME_KIND=moni
